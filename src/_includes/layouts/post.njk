---
layout: layouts/base.njk
---

<article class="h-entry">
    <h2 class = "p-name e-content">{{ title }} </h2>
    {% if featuredImage %}
        <img src="{{ featuredImage }}" alt="{{ title }}" width="600">
    {% endif %}

        <p> {{ content | safe }}</p>

        <a class="u-url" href="/posts/{{ slug }}/">
                <time datetime="{{ date | htmlDateString }}">{{ date | readableDate }}<time>
        </a>
</article>
