---
layout: layouts/base.njk
---

<article class="h-entry">
    <h2 class = "p-name ">{{ title }} </h2>
    {% if featuredImage %}
        <img src="{{ featuredImage }}" alt="{{ title }}" width="600">
    {% endif %}

        <div class="e-content"> {{ content | safe }}</div>
        <time class="dt-published" datetime="{{ date | htmlDateString }}">{{ date | htmlDateString }}</time>

        <link class="u-url" href="/posts/{{ slug }}/"></>
        <link class="u-author h-card" href="/"></>
</article>
