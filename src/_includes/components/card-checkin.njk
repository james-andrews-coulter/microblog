<article class="h-entry h-entry--checkin">
  {% set c = post.data.checkin %}
  {% if c %}
    <p>üìç Checked in at
      {% if c.url %}
        <a href="{{ c.url }}">{{ c.name or "Somewhere" }}</a>
      {% else %}
        {{ c.name or "Somewhere" }}
      {% endif %}
    </p>
    {% if c["street-address"] or c.locality or c.region or c["postal-code"] or c["country-name"] %}
      <p class="p-location">
        {{ [c["street-address"], c.locality, c.region, c["postal-code"], c["country-name"]]
            | select | join(", ") }}
      </p>
    {% endif %}
  {% endif %}

  {% if post.templateContent %}
    <div class="e-content">{{ post.templateContent | safe }}</div>
  {% endif %}

  <a class="u-url" href="{{ post.url }}">
    <time class="dt-published" datetime="{{ post.date | htmlDateString }}">
      {{ post.date | readableDate }}
    </time>
  </a>
</article>
