    <a class="u-url" href="{{ post.url }}" rel="bookmark">{{ post.data.title }}</a>
  </h3>
  {% if post.data.summary or post.data.description %}
    <p class="p-summary">{{ post.data.summary or post.data.description }}</p>
  {% endif %}
 {% include "components/card-footer-tags.njk" %}
</article>
