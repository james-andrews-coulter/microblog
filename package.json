{
  "type": "module",
  "name": "microblog",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2"
  },
  "dependencies": {
    "@benjifs/github-store": "^0.2.0",
    "@benjifs/micropub": "^2.0.1",
    "luxon": "^3.7.1"
  },
  "scripts": {
    "sync:webmentions": "node scripts/sync-webmentions.mjs",
    "build": "npx @11ty/eleventy",
    "dev": "npx @11ty/eleventy --serve",
    "start": "npm run dev",
    "postbuild": "curl -s -X POST \"https://webmention.app/check?token=$WEBMENTION_APP_TOKEN&limit=1&url=https://blog.jamesandrewscoulter.com/feed.xml\" || true"
  }
}
